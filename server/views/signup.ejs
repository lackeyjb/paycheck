<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_head %>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <% include partials/_navbar %>
    <div class="container">
      <div class="row">
        <% include partials/_error %>
        <% include partials/_info %>
        <div class="col-sm-6 col-md-4 col-md-offset-4">
          <div class="account-wall">
            <div class="profile-img text-center">
              <span><i class="fa fa-user-plus"></i></span>
            </div>
            <form action="/signup" method="post" class="form-signin">
              <input type="text"
                     name="username"
                     class="form-control"
                     placeholder="Username"
                     required
                     autofocus />
              <input type="email"
                     name="email"
                     class="form-control"
                     placeholder="Email"
                     required />
              <input type="password"
                     name="password"
                     class="form-control"
                     placeholder="Password"
                     required />
              <input type="submit" class="btn btn-lg btn-primary btn-block" value="Signup">
            </form>
          </div>
          <a href="/login" class="text-center new-account">Login</a>
        </div>
      </div>
    </div>
  </body>
</html>
